{
  // General UI settings
  "inlayHint.enable": false,
  "suggest.floatConfig": {
    "border": true
  },
  "diagnostic.floatConfig": {
    "border": true
  },
  "signature.floatConfig": {
    "border": true
  },
  "hover.floatConfig": {
    "border": true
  },

  // Snippets
  "snippets.ultisnips.directories": ["custom-snippets"],
  "snippets.ultisnips.pythonPrompt": false,

  // C/C++ (clangd)
  "clangd.path": "/usr/bin/clangd",
  "clangd.arguments": [
    "--header-insertion=never",
    "--compile-commands-dir=build",
    "--background-index",
    "--clang-tidy",
    "--completion-style=detailed",
    "--log=error"
  ],
  "clangd.fallbackFlags": ["-std=c11", "-Wall"],

  // Python
  "python.pythonPath": "/usr/bin/python3",

  // Bash
  "languageserver": {
    "bash": {
      "command": "bash-language-server",
      "args": ["start"],
      "filetypes": ["sh"],
      "ignoredRootPaths": ["~"]
    }
  },

  // LaTeX
  "coc.source.vimtex.filetypes": ["tex", "latex"],
  "coc.source.vimtex.enable": true,
  "ltex.language": "es",
  "ltex.enabled": ["latex", "bibtex"]
}
