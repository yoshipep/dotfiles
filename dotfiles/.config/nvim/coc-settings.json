{
  // General UI settings
  "inlayHint.enable": false,
  "suggest.floatConfig": {
    "border": true
  },
  "diagnostic.floatConfig": {
    "border": true
  },
  "signature.floatConfig": {
    "border": true
  },
  "hover.floatConfig": {
    "border": true
  },

  // Snippets
  "snippets.ultisnips.directories": ["custom-snippets"],
  "snippets.ultisnips.pythonPrompt": false,

  // Markdown
  "markdownlint.config": {
    "line-length": false
  },

  // C/C++ (clangd)
  "clangd.arguments": [
    "--header-insertion=never",
    "--compile-commands-dir=build",
    "--background-index",
    "--clang-tidy",
    "--completion-style=detailed",
    "--log=error"
  ],
  "clangd.fallbackFlags": ["-Wall"],

  // Bash
  "languageserver": {
    "bash": {
      "command": "bash-language-server",
      "args": ["start"],
      "filetypes": ["sh"],
      "ignoredRootPaths": ["~"]
    },
    "asm-lsp": {
      "command": "asm-lsp",
      "filetypes": ["asm", "s", "S"],
      "rootPatterns": [".asm-lsp.toml", ".git"]
    }
  },

  // LaTeX
  "coc.source.vimtex.filetypes": ["tex", "latex"],
  "coc.source.vimtex.enable": true,
  "ltex.language": "es",
  "ltex.enabled": ["latex", "bibtex"]
}
