# SSH Configuration
#
# NOTE: Private keys are NOT included in the repository.
# Generate VM keys manually with:
#   ssh-keygen -t ed25519 -f ~/.ssh/vbox_vm_name -C "vm-description"
#   ssh-copy-id -i ~/.ssh/vbox_vm_name.pub user@vm_ip

Host rpi
	HostName rpi
	User rpi
	IdentityFile ~/.ssh/id_rsa
	AddressFamily inet
	PasswordAuthentication no

Host claude
	HostName 192.168.4.195
	User claude
	IdentityFile ~/.ssh/vbox_claude
	AddressFamily inet
	PasswordAuthentication no

Host github
	Hostname github.com
	User git
	IdentityFile ~/.ssh/github
	AddressFamily inet
	PasswordAuthentication no